<!-- Question 1: Multiple Choice Question -->
<qti-assessment-item xmlns="http://www.imsglobal.org/xsd/imsqti_v2p2"
                     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:schemaLocation="http://www.imsglobal.org/xsd/imsqti_v2p2 http://www.imsglobal.org/xsd/qti/qtiv2p2/imsqti_v2p2.xsd"
                     identifier="q1_multiple_choice"
                     title="Gauntlet AI Location"
                     adaptive="false"
                     timeDependent="false">
    
    <qti-response-declaration identifier="RESPONSE" cardinality="single" baseType="identifier">
        <qti-correct-response>
            <qti-value>choice_austin</qti-value>
        </qti-correct-response>
    </qti-response-declaration>
    
    <qti-outcome-declaration identifier="SCORE" cardinality="single" baseType="float">
        <qti-default-value>
            <qti-value>0</qti-value>
        </qti-default-value>
    </qti-outcome-declaration>
    
    <qti-item-body>
        <div>
            <p>What city is Gauntlet AI based in?</p>
            <qti-choice-interaction responseIdentifier="RESPONSE" shuffle="false" maxChoices="1">
                <qti-simple-choice identifier="choice_austin">Austin, Texas</qti-simple-choice>
                <qti-simple-choice identifier="choice_paris">Paris, France</qti-simple-choice>
            </qti-choice-interaction>
        </div>
    </qti-item-body>
    
    <qti-response-processing template="http://www.imsglobal.org/question/qti_v2p2/rptemplates/match_correct"/>
</qti-assessment-item>
